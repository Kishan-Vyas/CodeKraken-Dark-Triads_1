<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mess_mark_01" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Customize the icon tint color to green -->
        <item name="itemIconTint">@color/green</item>
        <item name="titleTextColor">@color/green</item>
    </style>
    <style name="ProductCardHome">
        <item name="background">@drawable/product_card_home_background</item>
        <item name="android:radius">50dp</item>
    </style>
    <style name="ButtonTheme">
        <item name="android:radius">10dp</item>
        <item name="backgroundColor">@color/green</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Theme.Mess_mark_01" parent="Base.Theme.Mess_mark_01" />
</resources>